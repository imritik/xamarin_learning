<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:d="http://xamarin.com/schemas/2014/forms/design"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            mc:Ignorable="d"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
            xmlns:views="clr-namespace:xamarin_notes_app.Views"
            x:Class="xamarin_notes_app.Views.TabBarPage"
            xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
            android:TabbedPage.ToolbarPlacement="Bottom"
            BarBackgroundColor="AliceBlue"
            
            >
    <!--Pages can be added as references or inline-->
    <TabbedPage.Children>
        <NavigationPage Title="Task" IconImageSource="list.png">
            <x:Arguments>
                <views:TaskPage/>
            </x:Arguments>
        </NavigationPage>
        <NavigationPage Title="Add New" IconImageSource="add.png" >
            <x:Arguments>
                <views:AddNewTask/>
            </x:Arguments>
        </NavigationPage>
        <NavigationPage Title="Profile" IconImageSource="user.png">
            <x:Arguments>
                <views:ProfilePage/>
            </x:Arguments>
        </NavigationPage>
    </TabbedPage.Children>
</TabbedPage>
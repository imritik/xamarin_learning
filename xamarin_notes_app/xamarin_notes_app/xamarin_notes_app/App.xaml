<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="xamarin_notes_app.App">
    <Application.Resources>
        <x:String x:Key="ProfileScreenTitle">Profile</x:String>
        <x:String x:Key="AddTaskScreenTitle">New Task</x:String>
        <x:String x:Key="AllTaskScreenTitle">All Tasks</x:String>
        <x:String x:Key="ProfileScreenTitle">Profile</x:String>
        <x:String x:Key="TaskCountLabel">Total Task Logged</x:String>
        <ResourceDictionary>
            
            <Style x:Key="userNameText" TargetType="Label">
                <Setter Property="HorizontalOptions" Value="CenterAndExpand" />
                <Setter Property="FontSize" Value="30"/>
                <Setter Property="WidthRequest" Value="200" />
                <Setter Property="TextColor" Value="Black" />
                <Setter Property="FontAttributes" Value="Bold"/>
            </Style>
           
        </ResourceDictionary>
    </Application.Resources>
</Application>